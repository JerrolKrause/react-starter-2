{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": [
    "standard",
    "standard-react",
    "standard-jsx",
    "eslint:recommended",
    "plugin:jest/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react", "jest"],
  "rules": {
    "indent": ["warning", 2],
    "linebreak-style": ["warning", "unix"],
    "quotes": ["warning", "single"],
    "semi": ["warning", "never"],
    "one-var": "off",
    "react/jsx-no-bind": "off",
    "react/jsx-boolean-value": "off",
    "jsx-a11y/href-no-hash": "off",
    "camelcase": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-closing-tag-location": "off",
    "react/jsx-fragments": "off",
    "react/jsx-closing-bracket-location": "off",
    "no-comma-dangle": "off"
  },
  "settings": {
    "react": {
      "version": "16.13.1"
    }
  }
}
